#!/usr/bin/env bash

SCRIPT_NAME=${0##*/}

# load bootstrap
# shellcheck source=/bash-framework/_bootstrap.sh
source "$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )/vendor/bash-framework/_bootstrap.sh"

showHelp() {
INFO="$(echo -e "\033[1;37m")"
NORMAL="$(echo -e "\033[0m")"

cat << EOF
${INFO}Usage:${NORMAL} ${SCRIPT_NAME} <branchName>
show an error if branchName is not a known branch
EOF
}

if [[ "$#" != "1" ]]; then
    showHelp
    Log::fatal "$0: invalid arguments"
fi
branch="$1"

# check various branch hierarchies, adjust as needed
git show-ref --verify refs/heads/"$branch" ||
git show-ref --verify refs/remotes/"$branch" || 
    Log::fatal "not a branch name: $branch"
